/* pages/book/book.wxss */
swiper {
  height: 250px;
}
.swiper-item{
  display: flex;
  height: 280px;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: white;
}
.desc {
  -webkit-line-clamp: 1000;
  white-space: pre-wrap;
}

.panel_hd {
  font-size: 15px;
  background-color: #ffa0a0;
  color: #940300;
  align-content: center;
  display: flex;
  flex-direction: row;
  padding: 10px 0px;
}

.descline {
  display: block;
  text-indent: 2em;
}

.btn_thumb {
  width: 28px;
  height: 28px;
  padding: 0;
  border: none;
  background-color: #ffa0a0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 5px 0 0;
}

.div_thumb{
  display: flex;
  flex-direction: row-reverse;
  width: 30%;
  padding: 0px 10px 0px 0px;
}

.btn_thumb:after{
  border: none;
}

.image_thumb {
  width: 20px;
  height: 20px;
}

.span_title {
  width: 70%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  align-items: center;
}

.span_thumb {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 40px;
}