    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request":"launch",
            "name": "调试程序",
            "program": "${workspaceFolder}\\src\\www.ts",
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/src",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "启动编译后程序",
            "program": "${workspaceFolder}\\dist\\src\\www.js",
            "cwd": "${workspaceFolder}/dist/src",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}